<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="resources/css/styles.css">
    <title>CATEGORIAS FONDOS</title>
</head>
<body>
    <p style="display: none;"><%= secretaria %></p>
    <div class="flex justify-center items-center py-4 shadow-md" style="background-image: linear-gradient(to right, #127cc1, #127cc1);">
        <div class="text-center">
            <h1 class="text-md font-bold mb-1 text-white">Creación y Selección de Categorías de Fondos Disponibles</h1>
            <h1 class="text-lg font-bold mb-1 text-white"><strong><%= nombre %></strong></h1>
            <h2 class="text-lg font-bold mb-4 text-white"><strong>Secretaria: <%= nombreSecretaria %></strong></h2>
        </div>
        <div class="absolute top-0 right-0 m-4">
            <img src="img/UTN_logo_negro.png" alt="Imagen" class="h-16 w-16 object-cover">
        </div>
    </div>
<div class="container">
    <a href="/" id="volver" class="btn btn-outline-primary mt-4"><i class="bx bxs-chevron-left bx-md"></i></a>
    <a href="#" id="btnAgregarFondo" class="btn btn-outline-primary mt-4" data-secretaria="<%= secretaria %>"><i class="bx bxs-plus-circle bx-md"></i></a>
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">CATEGORIA</th>
                    <th scope="col">SELECCIÓN</th>
                </tr>
            </thead>
            <tbody>
                <% resultados.forEach(function(fondos) { %>
                <tr>
                    <td><%= fondos.nombre_categoria_fondo %></td>
                    <td>
                        <a href="#" class="btn btn-outline-info btnSeleccionarFondo" data-id="<%= fondos.id_categoria_fondo %>" data-name=" <%= fondos.nombre_categoria_fondo %>">Seleccionar</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
</div>
<!-- Modal de Agregar Fondo-->
<div class="modal fade" id="modalAgregarFondo" tabindex="-1" aria-labelledby="modalAgregarFondoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAgregarFondoLabel">Agregar Fondo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAgregarFondo" action="/agregar-fondo-categoria" method="post">
                    <div class="mb-3">
                        <label for="nombreFondo" class="form-label">Nombre de Fondo</label>
                        <input type="text" class="form-control" id="nombreFondo" name="nombreFondo" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal de Selección de Fondo -->
<div class="modal fade" id="modalSeleccionarFondo" tabindex="-1" aria-labelledby="modalSeleccionarFondoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalSeleccionarFondoLabel">Seleccionar Fondo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formSeleccionarFondo" action="/cargar-fondo" method="post">
                    <div class="mb-3">
                        <label for="nombreCategoriaFondo" class="form-label">Nombre de la Categoría del Fondo</label>
                        <input type="text" class="form-control" id="nombreCategoriaFondo" name="nombreCategoriaFondo" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="montoFondo" class="form-label">Monto</label>
                        <input type="number" class="form-control" id="montoFondo" name="montoFondo" step="0.01" required>
                    </div>
                    <input type="hidden" id="idCategoriaFondo" name="idCategoriaFondo">
                    <button type="submit" class="btn btn-primary">Cargar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function() {
    $('#btnAgregarFondo').click(function() {
        $('#modalAgregarFondo').modal('show');
    });
    $('.btnSeleccionarFondo').click(function() {
            var idFondo = $(this).data('id');
            var nombreFondo = $(this).data('name');

            $('#idCategoriaFondo').val(idFondo);
            $('#nombreCategoriaFondo').val(nombreFondo);

            $('#modalSeleccionarFondo').modal('show');
        });
    })
</script>
<script src="resources/js/jsformat.js"></script>
</body>
</html>
