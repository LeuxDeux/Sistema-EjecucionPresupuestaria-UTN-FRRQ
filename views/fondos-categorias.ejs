<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function() {
    $('#btnAgregarFondo').click(function() {
        $('#modalAgregarFondo').modal('show');
    });
    // $('.btnSeleccionarFondo').click(function() {
    //         var idFondo = $(this).data('id');
    //         var nombreFondo = $(this).data('name');

    //         $('#idCategoriaFondo').val(idFondo);
    //         $('#nombreCategoriaFondo').val(nombreFondo);

    //         $('#modalSeleccionarFondo').modal('show');
    //     });
    })
    document.addEventListener('DOMContentLoaded', () => {
    const btnSeleccionarFondo = document.querySelectorAll('.btnSeleccionarFondo');
    const modalSeleccionarFondo = new bootstrap.Modal(document.getElementById('modalSeleccionarFondo'));
    const nombreCategoriaFondo = document.getElementById('nombreCategoriaFondo');
    const idCategoriaFondo = document.getElementById('idCategoriaFondo');
    const montoPeso = document.getElementById('montoPeso');
    const montoDolar = document.getElementById('montoDolar');
    const montoPesosDiv = document.getElementById('montoPesosDiv');
    const montoDolarDiv = document.getElementById('montoDolarDiv');
    const destino = document.getElementById('destinoSelect');

    btnSeleccionarFondo.forEach(button => {
        button.addEventListener('click', (event) => {
            event.preventDefault();
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            const datadestino = button.getAttribute('data-destino');

            nombreCategoriaFondo.value = name;
            idCategoriaFondo.value = id;
            destino.value = datadestino;

            // Mostrar o ocultar los campos de monto según el destino
            if (destino.value === 'universidad') {
                montoPesosDiv.style.display = 'block';
                montoDolarDiv.style.display = 'none';
                montoPeso.required = true;
                montoDolar.required = false;
                montoDolar.value = ''; // Limpiar el valor de montoDolar si es que se había escrito algo
                montoDolar.disabled = true; // Deshabilitar el campo de montoDolar
            } else if (destino.value === 'fundacion') {
                montoPesosDiv.style.display = 'block';
                montoDolarDiv.style.display = 'block';
                montoPeso.required = false;
                montoDolar.required = false;
                montoPeso.disabled = false; // Habilitar el campo de montoPeso
                montoDolar.disabled = false; // Habilitar el campo de montoDolar

                // Asegurarse de que solo uno de los montos se pueda rellenar
                montoPeso.addEventListener('input', () => {
                    if (montoPeso.value) {
                        montoDolar.value = ''; // Limpiar montoDolar si se escribe algo en montoPeso
                        montoDolar.disabled = true; // Deshabilitar montoDolar
                    } else {
                        montoDolar.disabled = false; // Habilitar montoDolar si montoPeso está vacío
                    }
                });
                montoDolar.addEventListener('input', () => {
                    if (montoDolar.value) {
                        montoPeso.value = ''; // Limpiar montoPeso si se escribe algo en montoDolar
                        montoPeso.disabled = true; // Deshabilitar montoPeso
                    } else {
                        montoPeso.disabled = false; // Habilitar montoPeso si montoDolar está vacío
                    }
                });
            }

            modalSeleccionarFondo.show();
        });
    });
});
    $(document).ready(function(){
            $('#sidebarToggle').click(function(){
                $('#sidebar').toggleClass('hidden');
            });
        });

        //Script para cambiar entre el submenú minimizado y desplegado junto con la flecha ">" "v"
        document.addEventListener("DOMContentLoaded", function() {
            const toggleFacturas = document.getElementById("toggleFacturas");
            const submenuFacturas = document.getElementById("submenuFacturas");
            const arrowIcon = document.getElementById("arrowIcon");

            toggleFacturas.addEventListener("click", function() {
                if (submenuFacturas.style.display === "none") {
                    submenuFacturas.style.display = "block";
                    arrowIcon.textContent = "v";
                } else {
                    submenuFacturas.style.display = "none";
                    arrowIcon.textContent = ">";
                }
            });
        });
</script>
<script src="resources/js/jsformat.js"></script>
