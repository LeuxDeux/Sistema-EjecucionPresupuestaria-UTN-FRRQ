<div class="modal fade" id="modalSeleccionarFondo" tabindex="-1" aria-labelledby="modalSeleccionarFondoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalSeleccionarFondoLabel">Seleccionar Fondo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formSeleccionarFondo" action="/cargar-fondo" method="post">
                    <div class="mb-3">
                        <label for="nombreCategoriaFondo" class="form-label">Nombre de la Categoría del Fondo</label>
                        <input type="text" class="form-control" id="nombreCategoriaFondo" name="nombreCategoriaFondo" readonly>
                    </div>
                    <div class="mb-3" id="montoPesosDiv">
                        <label for="montoPeso" class="form-label">Monto en Pesos</label>
                        <input type="number" class="form-control" id="montoPeso" name="montoPeso" step="0.01">
                    </div>
                    <div class="mb-3" id="montoDolarDiv">
                        <label for="montoDolar" class="form-label">Monto en Dólares</label>
                        <input type="number" class="form-control" id="montoDolar" name="montoDolar" step="0.01">
                    </div>
                    <input type="hidden" id="idCategoriaFondo" name="idCategoriaFondo">
                    <input type="hidden" id="destinoSelect" name="destinoSelect">
                    <button type="submit" class="btn btn-primary">Cargar</button>
                </form>
            </div>
        </div>
    </div>
</div>
