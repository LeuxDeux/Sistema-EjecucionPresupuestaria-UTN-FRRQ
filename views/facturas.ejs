<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Facturas</title>
</head>
<body>

<div class="container">
    <a href="#" class="btn btn-outline-primary mt-4 disabled"><i class="bx bxs-chevron-left bx-md"></i></a>
    <a href="#" class="btn btn-outline-primary mt-4 disabled"><i class="bx bxs-plus-circle bx-md"></i></a>
    <!-- Sección para mostrar información -->
    <% if(login) { %>
        <p>id secretaria: <%= secretaria %> id usuario :<%= id_usuario %></p>
    <% } %>
    <table class="table table-bordered table-striped text-center mt-4">
        <thead>
            <tr class="bg-primary text-white">
                <th scope="col" style="display: none;">ID</th>
                <th scope="col">Fecha de Carga</th>
                <th scope="col">Nombre de la Factura</th>
                <th scope="col" style="display: none;">Categoría ID</th>
                <th scope="col">Monto</th>
                <th scope="col">Estado</th>
                <th scope="col">Personal</th>
                <th scope="col" style="display: none;">Archivo de la Factura</th>
                <th scope="col">ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            <!-- Iterar sobre las facturas -->
            <!-- facturas.forEach(function(factura) { -->
                <% facturas.sort((a, b) => new Date(b.fecha_carga) - new Date(a.fecha_carga)).forEach(function(factura) { %>
                <tr>
                    <td style="display: none;"><%= factura.id %></td>
                    <td><%= factura.fecha_formateada %></td>
                    <td><%= factura.nombre_factura %></td>
                    <td style="display: none;"><%= factura.categoria_id %></td>
                    <td><%= factura.monto %></td>
                    <td><%= factura.estado %></td>
                    <td><%= nombre %></td>
                    <td style="display: none;"><%= factura.archivo_factura %></td>
                    <td>
                        <a href="#" class="btn btn-outline-info" id="btn-borrar-factura" data-id="<%= factura.id %>">Borrar</a>
                        <a href="/descargar-archivo/<%= factura.id %>" class="btn btn-outline-info" data-id="<%= factura.id %>">Descargar</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
