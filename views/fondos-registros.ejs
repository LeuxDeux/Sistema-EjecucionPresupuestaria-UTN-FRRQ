            <span class="material-icons">menu</span>
        </button>
        
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-blue-700 w-64 flex-shrink-0 hidden md:block shadow-md" style="background-image: linear-gradient(to bottom, #127cc1, #127cc1);">
            <ul class="py-4">
                <li><a href="/categorias" class="block py-2 px-4 text-white hover-links">Categorías</a></li>
                <li><a href="#" class="block py-2 px-4 text-white hover-links flex justify-between items-center" id="toggleFacturas">
                    <span>Facturas</span>
                    <span id="arrowIcon">></span>
                </a>
                <ul class="pl-4" id="submenuFacturas" style="display: none;">
                    <li><a href="/facturas" class="block py-2 px-4 text-white hover-links">Carga de Facturas</a></li>
                    <li><a href="/facturas-activas" class="block py-2 px-4 text-white hover-links">Facturas Activas</a></li>
                </ul>
                </li>
                <li><a href="/ingresos" class="block py-2 px-4 text-white hover-links">Ingresos</a></li>
                <li><a href="/analiticas" class="block py-2 px-4 text-white hover-links">Aprobar/Rechazar Facturas</a></li>
                <li><a href="/fondos-categorias" class="block py-2 px-4 text-white hover-links">Cargar Fondos</a></li>
                <li><a href="/fondos-disponibles" class="block py-2 px-4 text-white hover-links">Fondos Disponibles</a></li>
                <li><a href="/logout" class="block py-2 px-4 text-white hover-links">Cerrar Sesión</a></li>
            </ul>
        </nav>
        <% }else{ %>
            <div class="flex flex-col min-h-screen">
                <!-- Encabezados -->
                <p style="display: none;"><%= secretaria %></p>
                
                <!-- Contenedor principal -->
                <div class="flex min-h-screen">
                    <!-- Botón para desplegar la sidebar en los celulares -->
                    <button id="sidebarToggle" class="block md:hidden bg-blue-700 text-white py-2 px-4" style="background-image: #127cc1;">
                        <span class="material-icons">menu</span>
                    </button>
                    
                    <!-- Sidebar -->
                    <nav id="sidebar" class="bg-blue-700 w-64 flex-shrink-0 hidden md:block shadow-md" style="background-image: linear-gradient(to bottom, #127cc1, #FFFFFF);">
                        <ul class="py-4">
                            <li><a href="/categorias" class="block py-2 px-4 text-white hover-links">Categorías</a></li>
                            <li><a href="/facturas" class="block py-2 px-4 text-white hover-links">Facturas</a></li>
                            <li><a href="/ingresos" class="block py-2 px-4 text-white hover-links">Ingresos</a></li>
                            <li><a href="/logout" class="block py-2 px-4 text-white hover-links">Cerrar Sesión</a></li>
                        </ul>
                    </nav>
                <% } %>
                <div class="container">
                    <a href="/" id="volver" class="btn btn-outline-primary mt-4"><i class="bx bxs-chevron-left bx-md"></i></a>
                    <div class="mt-4">
                        <label for="selectorSemana" class="form-label">Selecciona la semana:</label>
                        <select id="selectorSemana" class="form-select mb-4">
                            <option value="" selected >Elija semana</option>
                            <!-- Opciones serán llenadas por JavaScript -->
                        </select>
                        <p id="semanaActual"></p>
                    </div>
                    <!-- Tabla de Fondos -->
                    <table class="table table-bordered table-striped text-center mt-4">
                        <thead>
                            <tr class="bgc-tr text-white">
                                <th scope="col">CATEGORIA</th>
                                <th scope="col">MONTO FUNDACIÓN PESO</th>
                                <th scope="col">MONTO FUNDACIÓN DOLAR</th>
                                <th scope="col">SEMANA</th>
                                <th scope="col">AÑO</th>
                            </tr>
                        </thead>
                        <tbody id="tablaFondos">
                            <% resultados.forEach(function(fondos) { %>
                            <tr>
                                <td><%= fondos.nombre_categoria_fondo %></td>
                                <td><%= fondos.total_monto_peso %></td>
                                <td><%= fondos.total_monto_dolar %></td>
                                <td><%= fondos.semana %></td>
                                <td><%= fondos.año %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
    <% } else { %>
        <div class="flex justify-center items-center h-screen">
            <div class="text-center">
                <h1 class="text-3xl font-bold mb-4"><strong><%= nombre %></strong></h1>
                <a href="login" class="block px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Ir a Inicio</a>
            </div>
        </div>
    <% } %>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function() {
        $("#sidebarToggle").click(function() {
            $("#sidebar").toggleClass("hidden");
        });

        $("#toggleFacturas").click(function() {
            $("#submenuFacturas").toggle();
            $("#arrowIcon").text($("#submenuFacturas").is(":visible") ? "˅" : ">");
        });

        $(document).ready(function() {
    // petición AJAX a /api/semanas-disponibles para obtener las semanas disponibles desde el servidor luego procesa la respuesta para crear y agregar (<option>) en el select
    function populateWeeks() {
        $.ajax({
            url: '/api/semanas-disponibles',
            method: 'GET',
            success: function(data) {
                let selector = $("#selectorSemana");
                data.forEach(semana => {
                    let weekNumber = semana.split(' - ')[0];
                    let dateRange = semana.split(' - ')[1];
                    let year = `20${dateRange.split('/')[0].split('-')[2]}`;
                    let option = $("<option></option>").val(`${weekNumber} - ${dateRange}`).text(`Semana ${weekNumber} - ${dateRange}`);
                    selector.append(option);
                });

                // Establecer la semana actual como valor por defecto si está disponible
                // la función intenta determinar cuál es la semana actual y seleccionarla automáticamente en el selector. También muestra la semana actual debajo del selector si está disponible.
                let today = new Date();
                let currentYear = today.getFullYear();
                let currentWeek = getWeekNumber(today)[1];
                let currentSemana = `${currentWeek} - (${today.getDate()}-${today.getMonth()+1}-${currentYear.toString().slice(2)})`;
                if (selector.find(`option[value^="${currentWeek}"]`).length > 0) {
                    selector.val(currentSemana);
                    $("#semanaActual").text(`Semana actual: ${currentWeek} del ${currentYear}`);
                }
            },
            error: function() {
                alert('Error al cargar las semanas disponibles');
            }
        });
    }

    // Llenar el selector de semanas al cargar la página
    populateWeeks();

    // Manejar el cambio en el selector de semanas
    $("#selectorSemana").change(function() {
        let selectedWeek = $(this).val();
        if (!selectedWeek) {
            // Si no se selecciona ninguna semana, solicitar todos los fondos disponibles
            $.ajax({
                url: '/api/fondos-disponibles-todos',
                method: 'GET',
                data: { semana: "" }, // Puede usar un valor específico si existe uno para todos los fondos
                success: function(data) {
                    // Limpiar la tabla y agregar los nuevos datos
                    let tableBody = $("#tablaFondos");
                    tableBody.empty(); // Limpiar tabla existente
                    data.forEach(fondos => {
                        let row = `<tr>
                            <td>${fondos.nombre_categoria_fondo}</td>
                            <td>${fondos.total_monto_peso}</td>
                            <td>${fondos.total_monto_dolar}</td>
                            <td>${fondos.semana}</td>
                            <td>${fondos.año}</td>
                        </tr>`;
                        tableBody.append(row);
                    });
                },
                error: function() {
                    alert('Error al cargar los datos');
                }
            });
        } else {
            // Actualizar la tabla basada en la semana seleccionada
            $.ajax({
                url: '/api/fondos-disponibles-semana',
                method: 'GET',
                data: { semana: selectedWeek },
                success: function(data) {
                    // Limpiar la tabla y agregar los nuevos datos
                    let tableBody = $("#tablaFondos");
                    tableBody.empty(); // Limpiar tabla existente
                    data.forEach(fondos => {
                        let row = `<tr>
                            <td>${fondos.nombre_categoria_fondo}</td>
                            <td>${fondos.total_monto_peso}</td>
                            <td>${fondos.total_monto_dolar}</td>
                            <td>${fondos.semana}</td>
                            <td>${fondos.año}</td>
                        </tr>`;
                        tableBody.append(row);
                    });
                },
                error: function() {
                    alert('Error al cargar los datos');
                }
            });
        }
    });
});
});
</script>
</body>
</html>